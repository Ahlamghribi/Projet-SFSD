typedef struct {
    char nom[50];
    int qte;
    float prix;
    int reference;
} Medicament;

typedef struct {
    char tab[50];  
    int nb;
} Bloc;

void suppression(int c, char *nomfich) {
    bool trouv;
    int i, j;
    Medicament medicament;

    Rech(c, nomfich, &trouv, &i, &j);
    if (trouv) {
        FILE *F = fopen(nomfich, "rb+");
        if (F == NULL) {
            perror("Erreur lors de l'ouverture du fichier");
            return;
        }

        Bloc buf;
        fseek(F, i * sizeof(Bloc), SEEK_SET);
        fread(&buf, sizeof(Bloc), 1, F);
 
        buf.tab[j] = '\0'; // Marquer le nom comme vide
        buf.nb--;

        fseek(F, i * sizeof(Bloc), SEEK_SET);
        fwrite(&buf, sizeof(Bloc), 1, F);

        fclose(F);
    }
}
 
